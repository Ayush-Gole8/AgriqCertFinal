{
  "name": "agriqcert-backend",
  "version": "1.0.0",
  "description": "AgriQCert Backend API - Digital Product Passport for Agricultural Quality Certification",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "worker": "tsx src/workers/issuanceWorker.ts",
    "dev:all": "concurrently --kill-others \"npm:dev\" \"npm:worker\"",
    "seed": "tsx src/scripts/seed.ts",
    "create-admin": "tsx src/scripts/createAdmin.ts",
    "update-admin":"tsx src/scripts/updateAdmin.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "agriculture",
    "certification",
    "blockchain",
    "verifiable-credentials",
    "quality-assurance"
  ],
  "author": "AgriQCert Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.9",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.3",
    "uuid": "^11.0.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.16.5",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.32.0",
    "mongodb-memory-server": "^10.4.1",
    "prettier": "^3.5.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
